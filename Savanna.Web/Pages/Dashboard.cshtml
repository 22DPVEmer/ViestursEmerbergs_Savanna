@page
@using Savanna.Web.Pages
@model DashboardModel
@{
    ViewData["Title"] = "Game Dashboard";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="card-title mb-0">Savanna Game</h2>
                        <p class="card-text mb-0">Experience the wild!</p>
                    </div>
                    <a href="/Game/Play" class="btn btn-light">Start New Game</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Saved Games Section -->
        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Saved Games</h5>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-primary">List View</button>
                        <button type="button" class="btn btn-sm btn-outline-primary active">Grid View</button>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.SavedGames?.Any() == true)
                    {
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            @foreach (var game in Model.SavedGames)
                            {
                                <div class="col">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body">
                                            <h6 class="card-title d-flex justify-content-between">
                                                <span>@game.Name</span>
                                                <small class="text-muted">Iteration @game.GetCurrentIteration()</small>
                                            </h6>
                                            <div class="small mb-3">
                                                <div class="d-flex justify-content-between">
                                                    <span>ü¶Å Lions: @game.GetLionCount()</span>
                                                    <span>ü¶å Antelopes: @game.GetAntelopeCount()</span>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">@game.SaveDate.ToString("MMM dd, HH:mm")</small>
                                                <div class="btn-group">
                                                    <a href="/Game/Play/@game.Id" class="btn btn-sm btn-primary">Continue</a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger">Delete</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="bi bi-save2 fs-1 text-muted"></i>
                            </div>
                            <h6 class="text-muted">No saved games yet</h6>
                            <p class="small text-muted mb-3">Start a new game to begin your adventure!</p>
                            <a href="/Game/Play" class="btn btn-primary">Start New Game</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Game Settings & Stats -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Game Settings</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label d-flex justify-content-between">
                            <span>Display Mode</span>
                            <span class="badge bg-primary">Current: Icons</span>
                        </label>
                        <div class="btn-group w-100">
                            <button type="button" class="btn btn-outline-primary active">Icons Mode</button>
                            <button type="button" class="btn btn-outline-primary">Text Mode</button>
                        </div>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="autosaveEnabled" checked>
                        <label class="form-check-label" for="autosaveEnabled">Enable Autosave</label>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Games Played</span>
                            <span class="badge bg-primary rounded-pill">@Model.TotalGamesPlayed</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Total Animals</span>
                            <span class="badge bg-primary rounded-pill">@Model.TotalAnimals</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Longest Game</span>
                            <span class="badge bg-primary rounded-pill">@Model.LongestGameIterations iterations</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Warn user when leaving game page without saving
        window.onbeforeunload = function() {
            if (document.querySelector('[data-game-active="true"]')) {
                return "You have an unsaved game. Are you sure you want to leave?";
            }
        };
    </script>
} 
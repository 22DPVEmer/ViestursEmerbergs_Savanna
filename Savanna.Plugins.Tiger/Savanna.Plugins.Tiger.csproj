  </ItemGroup>

  <ItemGroup>
    <None Update="config.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>Plugins\Tiger\config.json</TargetPath>
    </None>
  </ItemGroup>

  <!-- Remove post-build event for tests -->
  <!-- We'll add it back when running the actual application -->

</Project>
